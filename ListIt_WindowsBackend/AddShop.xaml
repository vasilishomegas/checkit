<Window x:Class="ListIt_WindowsBackend.AddShop"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListIt_WindowsBackend"
        mc:Ignorable="d"
        Title="AddShop" Height="450" Width="800">
    <Grid>
        <Grid Margin="0,0,0,0">
            <Label Content="Add a shop" HorizontalAlignment="Center" Height="45" VerticalAlignment="Top" Width="165" FontSize="25" FontWeight="Bold" Margin="240,0,0,0"/>
            <Label Content="Shop name:" HorizontalAlignment="Left" Height="40" Margin="0,85,0,0" VerticalAlignment="Top" Width="130" FontSize="20" />
            <Label Content="Street: " HorizontalAlignment="Left" Height="40" Margin="0,145,0,0" VerticalAlignment="Top" Width="130" FontSize="20" />
            <Label Content="Street number: " HorizontalAlignment="Left" Height="40" Margin="0,205,0,0" VerticalAlignment="Top" Width="145" FontSize="20" />
            <Label Content="Zipcode: " HorizontalAlignment="Left" Height="40" Margin="0,265,0,0" VerticalAlignment="Top" Width="130" FontSize="20" />
            <Label Content="City: " HorizontalAlignment="Left" Height="40" Margin="0,325,0,0" VerticalAlignment="Top" Width="130" FontSize="20" />
            <TextBox HorizontalAlignment="Right" Height="35" Margin="240,145,0,0" TextWrapping="Wrap" Text="K F C  GOES HERE" VerticalAlignment="Top" Width="240" FontSize="18" BorderThickness="1" BorderBrush="Black"/>
            <TextBox HorizontalAlignment="Right" Height="35" Margin="240,205,0,0" TextWrapping="Wrap" Text="K F C  GOES HERE" VerticalAlignment="Top" Width="240" FontSize="18" BorderThickness="1" BorderBrush="Black"/>
            <TextBox HorizontalAlignment="Right" Height="35" Margin="240,270,0,0" TextWrapping="Wrap" Text="K F C  GOES HERE" VerticalAlignment="Top" Width="240" FontSize="18" BorderThickness="1" BorderBrush="Black"/>
            <TextBox HorizontalAlignment="Right" Height="35" Margin="240,325,0,0" TextWrapping="Wrap" Text="K F C  GOES HERE" VerticalAlignment="Top" Width="240" FontSize="18" BorderThickness="1" BorderBrush="Black"/>
            <Button Content="Save changes" HorizontalAlignment="Right" Height="40" Margin="525,130,0,0" VerticalAlignment="Top" Width="155" FontSize="20" FontWeight="DemiBold"/>
            <Button Content="Discard changes" HorizontalAlignment="Right" Height="40" Margin="525,290,0,0" VerticalAlignment="Top" Width="160" FontSize="20" FontWeight="DemiBold"/>
            <ComboBox HorizontalAlignment="Left" Height="45" Margin="240,80,0,0" VerticalAlignment="Top" Width="240" x:Name="APIdropdown" FontSize="20" />

        </Grid>

    </Grid>
</Window>
