<Window x:Class="ListIt_WindowsBackend.AddChain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListIt_WindowsBackend"
        mc:Ignorable="d"
        Title="AddChain" Height="450" Width="800">
    <Grid Margin="3,0,2.6,0" HorizontalAlignment="Center" Width="788">
        <Label Content="Add a chain" HorizontalAlignment="Left" Height="45" VerticalAlignment="Top" Width="165" FontSize="25" FontWeight="Bold" Margin="310,50,0,0"/>
        <Label Content="Chain name:" HorizontalAlignment="Left" Height="40" Margin="210,160,0,0" VerticalAlignment="Top" Width="130" FontSize="20" />
        <TextBox HorizontalAlignment="Left" Height="35" Margin="420,160,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150" FontSize="18" BorderThickness="1" BorderBrush="Black"/>
        <Button Content="Save changes" HorizontalAlignment="Left" Height="40" Margin="210,280,0,0" VerticalAlignment="Top" Width="135" FontSize="20" FontWeight="DemiBold"/>
        <Button Content="Discard changes" HorizontalAlignment="Left" Height="40" Margin="420,280,0,0" VerticalAlignment="Top" Width="160" FontSize="20" FontWeight="DemiBold"/>
    </Grid>
</Window>
