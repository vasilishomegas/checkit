@using Resources

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Lang.yourLists;
}



<div class="container-fluid">
    <h1>@ViewBag.Title</h1>

   

    <ul class="list-group">

        <!-- CREATE LI-ITEM FOR EACH LIST -->
        <li class="list-group-item d-flex justify-content-between align-items-center">
 
            @Html.ActionLink("See single List", "SingleList", "User")
            <span class="badge btn-group-sm">
                <button class="btn btn-outline-dark" type="button" data-toggle="modal" data-target="#modalRename">
                    <!-- RENAME edit ICON -->
                    <i class="fa fa-pencil fa-lg"></i>
                </button>
                <button class="btn btn-outline-danger" type="button" onclick="">
                    <i class="fa fa-trash-o fa-lg"></i>
                </button>
            </span>
        </li>

    </ul>

    <div class="w-100 d-flex justify-content-center">
        <button class="btn btn-dark align-baseline">
            <!-- + ADD ICON -->
            <i class="fa fa-plus-circle fa-2x"></i>
        </button>
    </div>




</div>

<!-- Modal RENAME -->
<div class="modal fade" id="modalRename" tabindex="-1" role="dialog" aria-labelledby="modalRenameTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalRenameTitle">@Lang.rename</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm(null, null, FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.Editor("rename", new { @class = "form-control", type="text", value = "", placeholder = "Groceries"})
                    </div>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">@Lang.close</button>
                    <button type="button" class="btn btn-primary">@Lang.save</button>
                }


            </div>
            <div class="modal-footer">
                
            </div>
        </div>
    </div>
</div>

