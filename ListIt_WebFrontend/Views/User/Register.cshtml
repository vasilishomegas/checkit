@model ListIt_WebFrontend.Models.RegisterUserVM

@using Resources

@{
    Layout = null;
    ViewBag.Title = @Lang.register;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="launch">
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


    <div class="container-fluid">
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6 login-container min-vh-100">
                <div>
                    <h1 class="text-center pageheading">
                        @ViewBag.Title
                    </h1>



                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            <p>
                                @ViewBag.Error
                            </p>
                        </div>
                    }

                    <div>
                        @using (Html.BeginForm("CreateUser", "User", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Nickname, Lang.name, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col">
                                        @Html.EditorFor(model => model.Nickname, new { htmlAttributes = new { @class = "form-control", placeholder = Lang.name, required = "required" } })
                                        @Html.ValidationMessageFor(model => model.Nickname, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Email, Lang.email, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col">
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = Lang.email, type = "email", required = "required" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>


                                <div class="form-group">
                                    @Html.LabelFor(model => model.Country, Lang.country, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col">
                                        @Html.DropDownListFor(x => x.CountryId, Model.CountryList, htmlAttributes: new { @class = "form-control custom-select" })

                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Language, Lang.language, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col">
                                        @Html.DropDownListFor(x => x.LanguageId, Model.LangList, htmlAttributes: new { @class = "form-control custom-select" })

                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.PasswordHash, Lang.pw, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col">
                                        @Html.EditorFor(model => model.PasswordHash, new { htmlAttributes = new { @class = "form-control", placeholder = Lang.pw, required = "required" } })
                                        @Html.ValidationMessageFor(model => model.PasswordHash, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.PasswordRepeat, Lang.repPW, htmlAttributes: new { @class = "control-label col-md-6" })
                                    <div class="col">
                                        @Html.EditorFor(model => model.PasswordRepeat, new { htmlAttributes = new { @class = "form-control", placeholder = Lang.pw, required = "required" } })
                                        @Html.ValidationMessageFor(model => model.PasswordRepeat, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="d-inline-flex box col-md-8">
                                        @Html.ActionLink("You already have an account? Log in here.", "Login")
                                    </div>
                                    <div class="d-inline-flex justify-content-end">
                                        <button type="submit" class="btn btn-dark">
                                            @Lang.register
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }


                    </div>

                </div>


            </div>
            <div class="col-3"></div>
        </div>
    </div>




    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
