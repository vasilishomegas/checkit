@using Resources

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Lang.findStore;
}

    <div class="container-fluid">
        <h1 class="text-center pageheading">@ViewBag.Title</h1>

        <!-- SEARCH & FILTER -->
        <div class="searchFilterArea">

            <!-- SEARCHBAR -->
            @using (Html.BeginForm(null, null, FormMethod.Get, new { @class = "" }))
            {
                <div class="searchbar input-group">
                    @Html.Editor("Search", new { htmlAttributes = new { @class = "form-control", placeholder = Lang.search } })

                    <div class="input-group-append">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
                            <span class="fa fa-search"></span>
                        </button>
                    </div>
                </div>
            }


            <!-- FILTERAREA -->
            <div class="filterarea">

                @using (Html.BeginForm(null, null, FormMethod.Post))
                {
                    <div class="form-row">
                        <div class="col form-group">
                            <div class="d-flex justify-content-end">
                                <div id="stores">
                                    <label>@Lang.stores</label>
                                    <button class="btn dropdown-toggle" type="button" data-toggle="collapse" data-target="#selectStores" aria-expanded="false" aria-controls="collapseOne">
                                        <!-- Dropdown icon button -->
                                    </button>

                                    <div id="selectStores" class="collapse" data-parent="#stores">

                                        <div class="form-check">
                                            @Html.CheckBox("fakta", false, htmlAttributes: new { value = "" })
                                            @Html.Label("fakta", "Fakta")
                                        </div>
                                        <div class="form-check">
                                            @Html.CheckBox("netto", false, htmlAttributes: new { value = "" })
                                            @Html.Label("netto", "Netto")
                                        </div>
                                        <div class="form-check">
                                            @Html.CheckBox("lidl", false, htmlAttributes: new { value = "" })
                                            @Html.Label("lidl", "Lidl")
                                        </div>
                                        <div class="form-check">
                                            @Html.CheckBox("aldi", false, htmlAttributes: new { value = "" })
                                            @Html.Label("aldi", "Aldi")
                                        </div>

                                        <div class="form-check">
                                            @Html.CheckBox("fotex", false, htmlAttributes: new { value = "" })
                                            @Html.Label("fotex", "Fotex")
                                        </div>
                                        <div class="form-check">
                                            @Html.CheckBox("bilka", false, htmlAttributes: new { value = "" })
                                            @Html.Label("bilka", "Bilka")
                                        </div>
                                        <div class="form-check">
                                            @Html.CheckBox("spar", false, htmlAttributes: new { value = "" })
                                            @Html.Label("spar", "Spar")
                                        </div>
                                        <div class="form-check">
                                            @Html.CheckBox("meny", false, htmlAttributes: new { value = "" })
                                            @Html.Label("meny", "Meny")
                                        </div>
                                        <div class="form-check">
                                            @Html.CheckBox("rema1000", false, htmlAttributes: new { value = "" })
                                            @Html.Label("rema1000", "Rema 1000")
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="col form-group">
                            <div class="d-flex">
                                <button type="submit" class="btn btn-outline-dark btn-sm">@Lang.filter</button>
                            </div>
                        </div>
                    </div>
                        
                }
            </div>

        </div>

        <!-- SEARCH RESULTS -->
