@model ListIt_WebFrontend.Models.FindStoreVM
@using Resources

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Lang.findStore;
}


    <div class="container-fluid">
        <h1 class="text-center pageheading">@ViewBag.Title</h1>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <p class="text-center mb-0">
                    @ViewBag.Message
                </p>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <p class="text-center mb-0">
                    @ViewBag.Error
                </p>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <!-- SEARCH & FILTER -->
        <div class="searchFilterArea">

            <!-- SEARCHBAR -->
            @using (Html.BeginForm("LoadMap", "Store", FormMethod.Post, new { @class = "" }))
            {
                @Html.AntiForgeryToken()

                <div class="searchbar input-group">
                    @*@Html.LabelFor(model => model.Place, "Search for your location:", htmlAttributes: new { @class = "control-label" })*@
                    @Html.EditorFor(model => model.Place, new { htmlAttributes = new { @class = "form-control", placeholder = Lang.search, id = "txt_location" } })

                    <div class="input-group-append">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
                            <span class="fa fa-search"></span>
                        </button>
                    </div>
                </div>

            }

            <div class="google-maps">

                <iframe height="500" frameborder="0" style="border:0"
                        src="@Model.Url" allowfullscreen>
                </iframe>
            </div>

        </div>

    </div>

