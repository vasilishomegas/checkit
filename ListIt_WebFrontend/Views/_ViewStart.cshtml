@{
    //Layout = "~/Views/Shared/_Layout.cshtml";


    // Checks for requested language:
    if (!Request["lang"].IsEmpty())
    {
        Culture = UICulture = Request["lang"];
    }
    else if(Session["LanguageCode"] != null)
    {
        var countryCode = Session["LanguageCode"].ToString().ToUpper();
        var culture = countryCode + "-" + Session["LanguageCode"].ToString();
        Culture = UICulture = culture;
    }

    // Linking for Favicon (see https://favicon.io/favicon-converter/):
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
}
